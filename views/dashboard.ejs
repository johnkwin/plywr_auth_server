<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <a href="/admin/logout" class="logout-button">Logout</a>
        <h2>Admin Dashboard</h2>

        <div class="new-user-form">
            <h3>New User</h3>
            <label for="new-user-email">Email:</label>
            <input type="email" id="new-user-email" required>
            <label for="new-user-password">Password:</label>
            <input type="password" id="new-user-password">
            <div class="row">
                <button id="new-user-admin" class="toggle-button off">Off</button>
                <select id="new-user-subscription">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
            <button onclick="createUser()">Create User</button>
        </div>

        <input type="text" id="search-users" placeholder="Search users...">

        <ul class="user-list" id="user-list">
            <!-- User items will be dynamically injected here -->
        </ul>
    </div>
    <script src="/js/admin.js"></script> <!-- External JavaScript file -->
</body>
</html>
