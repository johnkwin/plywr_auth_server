<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <a href="/admin/logout" class="logout-button">Logout</a>
        <h2>Admin Dashboard</h2>
        
        <h3>Users</h3>
        <input type="text" id="searchUsers" placeholder="Search users..." oninput="handleSearch()">
        
        <form action="/admin/user" method="POST" class="user-form" id="newUserForm">
            <label for="newUserEmail">New User Email</label>
            <input type="email" id="newUserEmail" name="email" placeholder="New User Email">
            <label for="newUserPassword">Password</label>
            <input type="password" id="newUserPassword" name="password" placeholder="Password">
            <button type="submit">Save User</button>
        </form>

        <div class="user-list" id="userList">
            <!-- Dynamically populated user list -->
        </div>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>
