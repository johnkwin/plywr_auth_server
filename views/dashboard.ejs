<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <a href="/admin/logout" class="logout-button">Logout</a>
        <h2>Admin Dashboard</h2>

        <div class="user-search">
            <label for="searchUsers">Search Users</label>
            <input type="text" id="searchUsers" placeholder="Search users...">
        </div>
        <label for="newUserForm">Create New User</label>
        <div id="newUserForm">
            <input type="email" id="newUserEmail" placeholder="New User Email">
            <input type="password" id="newUserPassword" placeholder="Password">
            <button id="newUserAdmin" class="toggle-button off">Off</button>
            <select id="newUserSubscriptionStatus">
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
            <button id="saveNewUser">Save User</button>
        </div>
        <div class="user-list-container">
            <div id="userList" class="user-list">
                <!-- User blocks will be appended here via JS -->
            </div>
        </div>
    </div>
    <script>
    document.querySelectorAll('.user-list-item input').forEach(input => {
    input.addEventListener('focus', function () {
        this.style.width = `${this.scrollWidth + 20}px`; // Adjust width to fit content plus some padding
        this.style.transition = 'width 0.2s ease'; // Smooth transition
    });

    input.addEventListener('input', function () {
        this.style.width = `${this.scrollWidth + 20}px`; // Dynamically adjust width as user types
    });

    input.addEventListener('blur', function () {
        this.style.width = '150px'; // Reset width to default when focus is lost
    });
});

    </script>
    <script src="/js/admin.js"></script>
</body>
</html>
