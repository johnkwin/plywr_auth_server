<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <a href="/admin/logout" class="logout-button">Logout</a>
        <h2>Admin Dashboard</h2>

        <div class="user-search">
            <label for="searchUsers">Users</label>
            <input type="text" id="searchUsers" placeholder="Search users...">
        </div>

        <div id="newUserForm" class="new-user-form">
            <h3>New User</h3>
            <input type="email" id="newUserEmail" placeholder="New User Email">
            <input type="password" id="newUserPassword" placeholder="Password">
            <div class="new-user-options">
                <button id="newUserAdmin" class="toggle-button off">Off</button>
                <select id="newUserSubscriptionStatus">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
            </div>
            <button id="saveNewUser">Save User</button>
        </div>

        <div id="userList" class="user-list">
            <!-- Labels for the columns -->
            <div class="user-list-header">
                <span>Email</span>
                <span>Admin</span>
                <span>Subscription Status</span>
                <span>Actions</span>
            </div>
            <ul class="user-list-items"></ul>
        </div>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>
