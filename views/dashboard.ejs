<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <h2>Admin Dashboard</h2>
        <a href="/admin/logout" class="logout-button">Logout</a>

        <input type="text" class="search-bar" id="searchBar" placeholder="Search users...">

        <div id="user-list-container">
            <!-- Dynamically populated user list -->
        </div>

        <form action="/admin/user" method="POST" class="user-form" id="new-user-form">
            <h3>Create New User</h3>
            <input type="hidden" name="id" id="userId">
            <input type="email" id="email" name="email" placeholder="New User Email" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            <label for="isAdmin">Admin:</label>
            <input type="checkbox" id="isAdmin" name="isAdmin">
            <label for="subscriptionStatus">Subscription Status:</label>
            <select id="subscriptionStatus" name="subscriptionStatus">
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
            </select>
            <button type="submit">Save User</button>
        </form>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>
