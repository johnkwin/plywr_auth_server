<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-page">
    <div class="dashboard-container">
        <div class="header-container">
            <a href="/admin/logout" class="logout-button">Logout</a>
            <h2>Admin Dashboard</h2>
            <div class="user-search">
                <label for="searchUsers">Search Users</label>
                <input type="text" id="searchUsers" placeholder="Search users...">
            </div>
            <label for="newUserForm">Create New User</label>
            <div id="newUserForm">
                <input type="email" id="newUserEmail" placeholder="New User Email">
                <input type="password" id="newUserPassword" placeholder="Password">
                <button id="newUserAdmin" class="toggle-button off">Off</button>
                <select id="newUserSubscriptionStatus">
                    <option value="active">Active</option>
                    <option value="inactive">Inactive</option>
                </select>
                <button id="saveNewUser">Save User</button>
            </div>
        </div>
        <div class="user-list-container">
            <div class="user-list-scroll">
                <div id="userList" class="user-list">
                    <!-- User cards will be dynamically added here -->
                </div>
            </div>
        </div>
    </div>
    <script src="/js/admin.js"></script>
</body>
</html>
