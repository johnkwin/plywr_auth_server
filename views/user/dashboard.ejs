<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="manifest" href="/manifest.json">
    <style>
        /* General Styles */
        body {
            background-color: #1f1f1f;
            color: #f5f5f5;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow-x: hidden;
        }

        .dashboard-container {
            background-color: #2b2b2b;
            padding: 60px 20px 40px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            max-width: 400px;
            width: 100%;
            position: relative;
        }

        .dashboard-header {
            position: absolute;
            top: -30px;
            left: 0;
            width: 100%;
            background-color: #333;
            padding: 15px;
            border-radius: 12px 12px 0 0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-sizing: border-box;
        }

        .dashboard-header h1 {
            margin: 0;
            font-size: 20px;
            color: #fff;
            flex: 1;
            text-align: left;
        }

        .logout-button {
            color: #ffffff;
            background-color: #e74c3c;
            padding: 8px 16px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .logout-button:hover {
            background-color: #c0392b;
        }

        .alert {
            margin-bottom: 20px;
            padding: 15px;
            border-radius: 8px;
            font-size: 14px;
            color: #ffffff;
            background-color: #e74c3c;
            display: none;  /* Hidden by default */
        }

        .subscribe-button {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background-color: #9146FF;
            color: #ffffff;
            font-weight: bold;
            font-size: 16px;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .subscribe-button .crown-icon {
            margin-right: 8px;
            font-size: 20px;
        }

        .subscribe-button:hover {
            background-color: #772ce8;
        }

        /* Media Queries for Fullscreen Mobile Experience */
        @media (max-width: 480px) {
            body {
                justify-content: flex-start; /* Align content to the top */
                height: 100vh;
                max-height: 100vh;
                overflow-y: hidden;
            }

            .dashboard-container {
                padding: 60px 10px 20px;
                max-width: none;
                height: 100vh;
                border-radius: 0;
                box-shadow: none;
            }

            .dashboard-header {
                top: 0;
                border-radius: 0;
                padding: 20px;
            }

            .dashboard-header h1 {
                font-size: 18px;
            }

            .subscribe-button,
            .logout-button {
                width: 100%;
                padding: 12px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h1>Welcome, <%= user.email %></h1>
            <a href="/user/logout" class="logout-button">Logout</a>
        </div>
        
        <% if (message) { %>
            <div class="alert alert-danger">
                <%= message %>
            </div>
        <% } %>

        <!-- Conditionally render the Subscribe Free button if subscription is inactive -->
        <% if (user.subscriptionStatus === 'inactive') { %>
            <a href="/user/subscribe/check" class="subscribe-button">
                <span class="crown-icon">ðŸ‘‘</span> Subscribe Free
            </a>
        <% } else { %>
            <p>Your subscription is active.</p>
        <% } %>
    </div>

    <script>
        // Show the alert if there's a message
        const alert = document.querySelector('.alert');
        if (alert && alert.textContent.trim() !== '') {
            alert.style.display = 'block';
        }
    </script>
</body>
</html>
