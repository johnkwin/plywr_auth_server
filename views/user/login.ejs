<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Login</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        /* General Styles */
body {
    background-color: #1f1f1f;
    color: #f5f5f5;
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.login-container, .register-container {
    background-color: #2b2b2b;
    padding: 40px 30px;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    text-align: center;
    width: 100%;
    max-width: 400px;
}

.login-container h2, .register-container h2 {
    font-size: 28px;
    margin-bottom: 30px;
    color: #ffffff;
}

.error-message {
    background-color: #e74c3c;
    color: #ffffff;
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    display: none;  /* Hidden by default */
}

.login-form, .register-form {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.login-form label, .register-form label {
    font-size: 16px;
    margin-bottom: 5px;
    text-align: left;
    width: 100%;
    color: #ffffff;
}

.login-form input, .register-form input {
    font-size: 18px;
    padding: 12px 15px;
    margin-bottom: 20px;
    border-radius: 8px;
    border: none;
    width: 100%;
    box-sizing: border-box;
    background-color: #333;  /* Set the dark background color */
    color: #f5f5f5;  /* Lighter text color */
    caret-color: #ffffff;  /* White caret color */
}

.login-form input::placeholder, .register-form input::placeholder {
    color: #999;  /* Darker text for placeholder */
}

.login-form input:focus, .register-form input:focus {
    background-color: #333;  /* Ensure background color remains consistent on focus */
    color: #ffffff;  /* Ensure text color remains light on focus */
    outline: none;  /* Remove the default outline */
    box-shadow: 0 0 5px rgba(145, 70, 255, 0.5);  /* Add a subtle glow to indicate focus */
}

.login-form button, .register-form button {
    background-color: #9146FF;
    color: #ffffff;
    font-size: 18px;
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    width: 100%;
    transition: background-color 0.3s;
}

.login-form button:hover, .register-form button:hover {
    background-color: #772ce8;
}

.login-container p, .register-container p {
    margin-top: 20px;
    font-size: 14px;
    color: #ffffff;
}

.login-container a, .register-container a {
    color: #9146FF;
    text-decoration: none;
}

.login-container a:hover, .register-container a:hover {
    text-decoration: underline;
}

/* Media Queries for Responsiveness */
@media (max-width: 480px) {
    .login-container, .register-container {
        padding: 20px 15px;
    }

    .login-form input, .register-form input,
    .login-form button, .register-form button {
        font-size: 16px;
        padding: 10px;
    }

    .login-container h2, .register-container h2 {
        font-size: 24px;
    }
}

    </style>
</head>
<body class="login-page">
    <div class="login-container">
        <h2>User Login</h2>
        <% if (message) { %>
            <p class="error-message"><%= message %></p>
        <% } %>
        <form action="/user/login" method="POST" class="login-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            <button type="submit">Login</button>
        </form>
        <p>Don't have an account? <a href="/user/register">Register here</a>.</p>
    </div>

    <script>
        // Show the error message if there's a message
        const errorMessage = document.querySelector('.error-message');
        if (errorMessage && errorMessage.textContent.trim() !== '') {
            errorMessage.style.display = 'block';
        }
    </script>
</body>
</html>
